        'id' => $this->millesime . '|' . $ligne->ligneId,
        'ligneId' => $ligne->ligneId,
        'origine' => $url_ici
    ];
    $buttons = [
        'ouvrir' => [
            'class' => 'fam-book-open',
            'formaction' => $url_ouvrir,
            'title' => 'Services de la ligne ' . $ligne->ligneId
        ]
    ];
    ?>
				<tr class="petit <?=$css;?>">
					<td class="ligneid">
						<?=$this->escapeHtml($ligne->ligneId);?></td>
					<td class="operateur">
						<?=$this->escapeHtml($ligne->operateur);?></td>
					<td class="extremite">
						<?=$this->escapeHtml($ligne->extremite1);?></td>
					<td class="extremite">
						<?=$this->escapeHtml($ligne->extremite2);?></td>
					<td class="via">
						<?=$this->escapeHtml($ligne->via);?></td>
					<td class="boutons">
            			<?=$this->listeLigneActions($ligne->ligneId, $hiddens, $buttons);?></td>
				</tr>
			<?php endforeach;?>
			</tbody>
		</table>
	</div>
