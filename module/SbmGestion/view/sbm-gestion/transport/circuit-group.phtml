			<li>Circuit : <?= $this->escapeHtml($this->circuit->serviceId); ?></li>
			<li>Arrêt : <?= $this->escapeHtml($this->circuit->station);?> -
						<?= $this->escapeHtml($this->circuit->communeStation); ?></li>
			<li>Type d'arrêt : <?= $this->escapeHtml($this->circuit->typeArret); ?></li>
			<li>Commentaire aller : <?= $this->escapeHtml($this->circuit->commentaire1); ?></li>
			<li>Commentaire retour : <?= $this->escapeHtml($this->circuit->commentaire2); ?></li>
		</ul>
		<div class="flashMessenger float-right">
            <?= $this->flashMessenger()->render('success');?>
            <?= $this->flashMessenger()->render('warning');?>
            <?= $this->flashMessenger()->render('error');?>
            <?= $this->flashMessenger()->render('info');?>
            <?= $this->flashMessenger()->render('default');?>
		</div>
	</div>
	<div id="liste-header">
		<div class="menu clearfix"><?= $this->listeZoneActions($hiddens, $actions);?></div>
		<p>
			<em>Il y a <?= $this->data->count(); ?> élèves.</em>
		</p>
	</div>
	<div id="liste-inner">
		<table class="eleves">
			<tbody>
				<tr>
					<th></th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Adresse</th>
					<th>Adresse</th>
					<th>Code postal</th>
					<th>Commune</th>
					<th>Etablissement</th>
					<th>Classe</th>
				</tr>
			<?php foreach ($this->data as $row):?>
			<?php
    $hiddens = [
        'eleveId' => $row['eleveId'],
        'info' => $row['nom'] . ' ' . $row['prenom'],
        'email' => $row['email'],
        'responsable' => $row['responsable'],
        'group' => $url_group
    ];
    $buttons = [
        'modifier' => [
            'class' => 'fam-pencil',
            'formaction' => $url_edit,
            'title' => 'Modifier'
        ]
    ];
    if ($row['sansphoto']) {
        $buttons['photo'] = [
            'class' => 'fam-camera-add',
            'formaction' => $url_add_photo,
            'title' => 'Envoyer une photo'
        ];
    }
    if (! empty($row['email'])) {
        $buttons['ecrire'] = [
            'class' => 'fam-email',
            'formaction' => $url_mail,
            'title' => 'Envoyer un email'
        ];
    }
    $this->pictogrammes('init')
        ->addPreinscrit($row['paiement'] == 0 && $row['fa'] == 0 & $row['gratuit'] == 0)
        ->addSansPhoto($row['sansphoto']);
    ?>
			    <tr class="petit <?= $this->cycle(["even", "odd"])->next();?>">
					<td><?= $this->pictogrammes();?></td>
					<td><?= $this->escapeHtml($row['nom']);?></td>
					<td><?= $this->escapeHtml($row['prenom']);?></td>
					<td><?= $this->escapeHtml($row['adresseL1']);?></td>
					<td><?= $this->escapeHtml($row['adresseL2']);?></td>
					<td><?= $this->escapeHtml($row['codePostal']);?></td>
					<td><?= $this->escapeHtml($row['commune']);?></td>
					<td><?= $this->escapeHtml($row['etablissement']);?></td>
					<td class="centre"><?= $this->escapeHtml($row['classe']);?></td>
					<td><?= $this->listeLigneActions($row['eleveId'], $hiddens, $buttons);?></td>
				</tr>
			<?php endforeach;?>
			</tbody>
		</table>
	</div>
	<div id="liste-footer">
		<p>
			<em>Il y a <?= $this->data->count(); ?> élèves.</em>
		</p>
	</div>
</div>