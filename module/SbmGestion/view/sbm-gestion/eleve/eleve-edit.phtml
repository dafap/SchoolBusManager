use SbmBase\Model\DateLib;

function formatDate($date, $withTime = true)
{
    if ($withTime) {
        $d = DateLib::formatDateTimeFromMysql($date);
        if ($d == '01/01/1900 00:00:00') {
            return '';
        } else {
            return $d;
        }
    } else {
        $d = DateLib::formatDateFromMysql($date);
        if ($d == '01/01/1900') {
            return '';
        } else {
            return $d;
        }
    }
}

