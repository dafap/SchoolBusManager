        'page' => $this->page,
        'pr' => $this->pageRetour
    ]);
$url_group = $this->url('sbmgestion/transport',
    [
        'action' => $this->origine ? $this->origine . '-group' : 'circuit-group',
        'page' => $this->page,
        'id' => $this->pageRetour
    ]);
$url_edit = $this->url('sbmgestion/eleve',
    [
        'action' => 'eleve-edit',
        'page' => $this->page,
        'id' => $this->pageRetour
    ]);
$url_mail = $this->url('sbmgestion/eleve',
    [
        'action' => 'responsable-mail',
        'page' => $this->page,
        'id' => $this->pageRetour
    ]);
$url_mark_selection = $this->url('sbmgestion/transport',
