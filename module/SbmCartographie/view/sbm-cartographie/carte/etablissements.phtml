$i = 0;
$tMarkers = "[\n";
foreach ($this->ptEtablissements as $pt) {
    $e = $pt->getAttribute('etablissement');
    $niveau = array_sum($e->niveau);
    if ($niveau <4) {
        //$color = "#ffff00";
        $lettre = "E";
        $nature = "Ecole";
    } elseif ($niveau == 4) {
        //$color = "#fc6700";
        $lettre = "C";
        $nature = "Collège";
    } else {
        //$color = "#e5c3d0";
        $lettre = "L";
        $nature = "Lycée";
    }
    if ($e->desservie) {
        $color = "#00ff00";
        $nature .= " desservie";
    } else {
        $color = "#ff0000";
        $nature .= " non desservie";
    }
    $d = array(
        '<b>' . $this->escapeHtml($e->nom) . '</b>',
        trim(implode(" - ", array(
            $e->adresse1,
            $e->adresse2
        )), " -"),
        implode(' ', array(
            $e->codePostal,
            $e->commune
        )),
        'Tél. ' . $e->telephone,
    );
    $tmp = $e->email;
    if (!empty($tmp)) {
        $d[] = 'Email : ' . $e->email;
    }
    $d[] = $nature;
    
    $tMarkers .= '{"lat":' . $pt->getLatitude() .',"lng":' . $pt->getLongitude() . ',"color":"' . $color . '","text":"' . $lettre. '","title":"' . $e->nom .'","info":"' . implode('<br>', $d) ."\"},\n";

}
$tMarkers .= ']';
