    }
    $aller[$i] = array(
        $this->circuits[$i]->m1,
        $this->circuits[$i]->station,
        $this->circuits[$i]->typeArret,
        empty($this->t_nb_inscrits[$i]) ? '' : $this->t_nb_inscrits[$i],
        empty($this->t_nb_inscrits[$i]) ? '' : '(voir tableau ci-dessous)',
        $this->circuits[$i]->commentaire1
    );
}
for ($j = 1, $i = count($this->circuits); $i >= 1; $i --, $j ++) {
    $retour[$j] = array(
        $this->circuits[$i]->s2 . '<br>' . $this->circuits[$i]->s1,
        $this->circuits[$i]->station,
        $this->circuits[$i]->typeArret,
        empty($this->t_nb_inscrits[$i]) ? '' : $this->t_nb_inscrits[$i],
        empty($this->eleves[$i]) ? '' : implode('<br>', $this->eleves[$i]),
        $this->circuits[$i]->commentaire2
    );
}
