use SbmBase\Model\DateLib;

$this->headLink()->appendStylesheet($this->basePath('/css/fam-icons-custom.css'));
$col_date_width = 100;
$url_retour = $this->url('sbmgestion');
$url_nouvelle = $this->url('sbmgestion/anneescolaire', [
    'action' => 'new'
]);
$url_simulation_vider = $this->url('sbmgestion/anneescolaire',
    [
        'action' => 'simulation-vider'
    ]);
$url_simulation_preparer = $this->url('sbmgestion/anneescolaire',
    [
        'action' => 'simulation-preparer'
    ]);
$hiddens = [];
$actions = [
    'retour' => [
        'class' => 'fam-door-out',
        'formaction' => $url_retour,
        'title' => 'Retour'
    ],
    'ajouter' => [
        'class' => 'fam-date-add',
        'formaction' => $url_nouvelle,
        'title' => 'Nouvelle année scolaire'
    ]
];
?>
<h1>Gestion des années scolaires</h1>
<div id="liste-wrapper">
	<div id="liste-header" class="clearfix">
		<div class="zone-actions">
			<div class="menu float-left"><?= $this->listeZoneActions($hiddens, $actions);?></div>
			<div class="flashMessenger float-right">
			<?= $this->flashMessenger()->render('success');?>
			<?= $this->flashMessenger()->render('warning');?>
			<?= $this->flashMessenger()->render('error');?>
			<?= $this->flashMessenger()->render('info');?>
			<?= $this->flashMessenger()->render('default');?>
</div>
		</div>
	</div>
	<div id="liste-inner">
		<table class="liste-inner annees-scolaires">
			<tbody>
				<tr>
					<th>Année scolaire</th>
					<th style="text-align: center; width: <?= $col_date_width; ?>px;">Date
						de début</th>
					<th style="text-align: center; width: <?= $col_date_width; ?>px;">Date
						de fin</th>
					<th>Etat</th>
					<th></th>
				</tr>
<?php foreach ($this->anneesScolaires as $as) :?>
<?php
    $url_voir = $this->url('sbmgestion/anneescolaire',
        [
            'action' => 'voir',
            'millesime' => $as['millesime']
        ]);
    $url_activer = $this->url('sbmgestion/anneescolaire',
        [
            'action' => 'active',
            'millesime' => $as['millesime']
        ]);
    $classes_css = $this->cycle([
        "even",
        "odd"
    ])->next();
    if (! $as['valid']) {
        $classes_css .= ' incomplet';
    }
    ?>
                <tr class="<?= $classes_css;?>">
					<td><?= $as['description'];?></td>
					<td style="text-align: center; width: <?= $col_date_width; ?>px;"><?= DateLib::formatDateFromMysql($as['dateDebut']);?></td>
					<td style="text-align: center; width: <?= $col_date_width; ?>px;"><?= DateLib::formatDateFromMysql($as['dateFin']);?></td>
					<td><?= $as['ouvert'] ? 'Ouverte' : 'Fermée';?></td>
					<td>
<?php if ($as['valid']) :?>
    <?php if ($as['millesime'] == $this->millesimeActif) :?>
        <i class="fam-date-go"></i>
    <?php else :?>
        <a href="<?= $url_activer;?>" class="bouton" title="Activer"><i
							class="fam-date"></i></a>
    <?php endif;?>
<?php endif;?>
<?php if ($as['millesime'] != $this->simulation_millesime) :?>
        <a href="<?= $url_voir;?>" class="bouton"
						title="<?= $as['valid'] ? 'Calendrier' : 'Définir les dates';?>"><i
							class="fam-date-magnify"></i></a>
<?php elseif ($this->simulation_vide) :?>
        <a href="<?= $url_simulation_preparer;?>" class="bouton"
						title="<?= 'Préparer une simulation';?>"><i class="fam-ruby-gear"></i></a>
<?php else : ?>
        <a href="<?= $url_simulation_vider;?>" class="bouton"
						title="<?= 'Effacer la simulation';?>"><i class="fam-ruby-delete"></i></a>
<?php endif;?>
				    </td>
				</tr>
<?php endforeach;?>
            </tbody>
		</table>
	</div>
</div>