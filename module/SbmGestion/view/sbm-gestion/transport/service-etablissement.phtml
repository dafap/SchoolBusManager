                ])->next();
                if ($etablissement->serv_nbPlaces < $nbInscrits) {
                    $css .= ' exces';
                }
                $hiddens = [
                    'etablissementId' => $etablissement->etablissementId,
                    'serviceId' => $this->service->serviceId,
                    'origine' => 'service-etablissement'
                ];
