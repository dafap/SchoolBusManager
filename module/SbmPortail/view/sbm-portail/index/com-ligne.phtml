$url_retour = $this->url('sbmportail', [
    'action' => 'com-index'
]);
$url_ouvrir = $this->url('sbmgestion/transport', [
    'action' => 'circuit-service'
]);
$url_rapports = $this->url('sbmgestion/transport',
    [
        'action' => 'com-ligne-pdf',
        'page' => $this->page
    ]);
