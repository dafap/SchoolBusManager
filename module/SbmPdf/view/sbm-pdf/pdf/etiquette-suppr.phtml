?>
<h1>Suppression de sous-étiquette n° <?= $this->document['sublabel'] + 1;?> du document <?=$this->document['name'];?></h1>
<div id="suppr-wrapper">
	<div class="header-wrapper">
		<p>Vous avez demandé la suppression de sa sous-étiquette n° <?= $this->document['sublabel'] + 1;?>
	du document <?=$this->document['name'];?>.
	</p>
	<?php if (count($this->fields)):?>
		<p>Cette sous-étiquette contient les champs suivants :</p>
		<ul>
		<?php foreach($this->fields as $field):?>
			<li><?= $field; ?></li>
		<?php endforeach;?>
		</ul>
		<p>La suppression de la sous-étiquette supprimera aussi tous ces
			champs.</p>
		<?php else:?>
		<p>Cette sous-étiquette ne contient pas de champs.</p>
		<?php endif;?>
	</div>
	<p>Confirmez-vous ?</p>
	<?= $this->form()->openTag($form);?>
	<?= $this->formCollection($form);?>
	<?= $this->form()->closeTag();?>
</div>