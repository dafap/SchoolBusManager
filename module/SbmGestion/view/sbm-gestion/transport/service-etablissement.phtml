                    'h1' => [
                        $etablissement->cir_m1,
                        $etablissement->cir_s1,
                        $etablissement->cir_z1
                    ],
                    'h2' => [
                        $etablissement->cir_m2,
                        $etablissement->cir_s2,
                        $etablissement->cir_z2
                    ],
                    'h3' => [
                        $etablissement->cir_m3,
                        $etablissement->cir_s3,
                        $etablissement->cir_z3
                    ]
                ];
                for ($i = 1; $i <= 3; $i ++) {
                    $horaires["h$i"] = array_filter($horaires["h$i"], function ($v) {
                        return $v != '00:00:00';
                    });
                }
