$h3contentD = array();
$aller = array();
$retour = array();
$nbCircuits = count($this->circuits);
for ($i = 1; $i <= $nbCircuits; $i ++) {
    if ($i < $nbCircuits) { // les 2 derniers services sont identiques car on a rajouté l'arrivée à l'établissement à la fin
        $h3contentG[] = 'Circuit n° ' . $this->circuits[$i]->serviceId . ' - car ' . $this->circuits[$i]->transporteur;
