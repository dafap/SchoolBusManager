$sep = '';
foreach ((array) $this->header_elements['left'] as $name => $url) {
    if (is_array($url)) {
        $href = array_key_exists('href', $url) ? $url['href'] : '';
        $accesskey = array_key_exists('accesskey', $url) ? ' accesskey="' .
            $url['accesskey'] . '"' : '';
        $title = array_key_exists('title', $url) ? ' title="' . $url['title'] . '"' : '';
        $css = array_key_exists('class', $url) ? ' class="' . $url['class'] . '"' : '';
    } elseif (is_string($url)) {
        $href = $url;
        $accesskey = '';
        $title = '';
        $css = '';
    }
    echo $sep . '<a' . $title . $accesskey . $css . ' href="' . $href . '">' . $name .
        '</a>';
    $sep = ' ';
}
